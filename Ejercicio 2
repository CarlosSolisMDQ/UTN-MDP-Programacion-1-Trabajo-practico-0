#include <stdio.h>
#include <stdlib.h>

int main()
{
    
    //Una tienda ofrece un descuento del 15% sobre el total de la compra. Un cliente desea saber cuanto debera pagar finalmente.
    
    int descuento;

    float precio, precioConDescuento;

    descuento = 15;

    printf("Ingrese el total de la compra: \n");

    scanf("%f", &precio);

    //con un punto y un numero en el tipo de la variable podes limitar la cantidad de decimales del float
    //printf("%.0f", precio);

    precioConDescuento = precio - ((precio/100)*descuento);

    printf("\nEl total menos el descuento es:%.2f", precioConDescuento);

    return 0;


}
